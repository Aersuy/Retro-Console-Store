@model RetroConsoleStoreDotDomain.Model.Product.ProductModelBack

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Product";
}

<div class="contact-container">
    <h2 class="retro-font-pixel">Add New Product</h2>

    <div class="famicom-controller-ports">
        <span></span>
        <span></span>
    </div>

    @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label for="Name">Product Name</label>
            @Html.TextBoxFor(m => m.Name, new
            {
                required = "required",
                placeholder = "Enter product name"
            })
        </div>

        <div>
            <label for="Description">Description</label>
            @Html.TextAreaFor(m => m.Description, new
            {
                required = "required",
                placeholder = "Enter product description",
                rows = "4"
            })
        </div>

        <div>
            <label for="Price">Price</label>
            @Html.TextBoxFor(m => m.Price, new
            {
                type = "number",
                step = "0.01",
                required = "required",
                placeholder = "Enter price"
            })
        </div>

        <div>
            <label for="StockQuantity">Stock Quantity</label>
            @Html.TextBoxFor(m => m.StockQuantity, new
            {
                type = "number",
                required = "required",
                placeholder = "Enter stock quantity",
                min = "0"
            })
        </div>

        <div>
            <label for="Brand">Brand</label>
            @Html.TextBoxFor(m => m.Brand, new
            {
                required = "required",
                placeholder = "Enter brand name"
            })
        </div>

        <div>
            <label for="YearReleased">Year Released</label>
            @Html.TextBoxFor(m => m.YearReleased, new
            {
                type = "number",
                required = "required",
                placeholder = "Enter release year",
                min = "1970",
                max = "2024"
            })
        </div>

        <div>
            <label for="Status">Status</label>
            @Html.DropDownListFor(m => m.Status, new SelectList(new[] {
                new { Value = "Available", Text = "Available" },
                new { Value = "Out of Stock", Text = "Out of Stock" },
                new { Value = "Discontinued", Text = "Discontinued" }
            }, "Value", "Text"), "Select status", new { required = "required" })
        </div>

        <div>
            <label for="ImageFile">Product Image</label>
            <input type="file" name="ImageFile" id="ImageFile" accept="image/*" required />
            
        </div>

        <div class="button-container">
            <button type="submit" class="retro-font-8bit">Add Product</button>
        </div>
    }

    <div class="famicom-cartridge-slot"></div>

    @if (ViewBag.Message != null)
    {
        <div class="message-box retro-font-8bit">
            @ViewBag.Message
        </div>
    }
</div>