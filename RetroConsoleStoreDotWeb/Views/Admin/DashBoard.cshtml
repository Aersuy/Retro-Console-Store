@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Dashboard";
}

<div class="admin-dashboard-container">
    <div class="dashboard-header">
        <h1 class="retro-font-pixel">🎮 Admin Control Center</h1>
        <div class="power-indicator">
            <span class="power-light"></span>
            <span class="retro-font-8bit">SYSTEM ONLINE</span>
        </div>
    </div>

    <div class="famicom-controller-ports">
        <span></span>
        <span></span>
    </div>

    <!-- Quick Stats Section -->
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">👥</div>
            <div class="stat-info">
                <h3 class="retro-font-8bit">Total Users</h3>
                <p class="stat-number">@(ViewBag.TotalUsers ?? "---")</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">📦</div>
            <div class="stat-info">
                <h3 class="retro-font-8bit">Products</h3>
                <p class="stat-number">@(ViewBag.TotalProducts ?? "---")</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🚫</div>
            <div class="stat-info">
                <h3 class="retro-font-8bit">Banned Users</h3>
                <p class="stat-number">@(ViewBag.BannedUsers ?? "---")</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">⭐</div>
            <div class="stat-info">
                <h3 class="retro-font-8bit">Reviews</h3>
                <p class="stat-number">@(ViewBag.TotalReviews ?? "---")</p>
            </div>
        </div>
    </div>

    <!-- Main Admin Menu -->
    <div class="admin-menu-grid">
        <!-- User Management Section -->
        <div class="admin-section">
            <div class="section-header">
                <h2 class="retro-font-8bit">👥 User Management</h2>
                <div class="section-divider"></div>
            </div>
            <div class="admin-buttons">
                <a href="@Url.Action("AdminUserPage", "Admin")" class="admin-card">
                    <div class="card-icon">👥</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Manage Users</h3>
                        <p>View, ban, unban, and manage user accounts</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
                <a href="@Url.Action("ManageRoles", "Admin")" class="admin-card">
                    <div class="card-icon">🛡️</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Manage Roles</h3>
                        <p>Assign and modify user roles and permissions</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
            </div>
        </div>

        <!-- Product Management Section -->
        <div class="admin-section">
            <div class="section-header">
                <h2 class="retro-font-8bit">📦 Product Management</h2>
                <div class="section-divider"></div>
            </div>
            <div class="admin-buttons">
                <a href="@Url.Action("AddProduct", "Admin")" class="admin-card">
                    <div class="card-icon">➕</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Add Product</h3>
                        <p>Add new retro gaming products to the store</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
                <a href="@Url.Action("ManageProducts", "Admin")" class="admin-card">
                    <div class="card-icon">📝</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Edit Products</h3>
                        <p>Modify existing product details and inventory</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
                <a href="@Url.Action("ProductStatistics", "Admin")" class="admin-card">
                    <div class="card-icon">📊</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Product Stats</h3>
                        <p>View sales data and product performance</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
            </div>
        </div>

        <!-- Content Management Section -->
        <div class="admin-section">
            <div class="section-header">
                <h2 class="retro-font-8bit">📝 Content Management</h2>
                <div class="section-divider"></div>
            </div>
            <div class="admin-buttons">
                <a href="@Url.Action("ManageReviews", "Admin")" class="admin-card">
                    <div class="card-icon">⭐</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">Manage Reviews</h3>
                        <p>Moderate and manage product reviews</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
            </div>
        </div>

        <!-- Reports & Analytics Section -->
        <div class="admin-section">
            <div class="section-header">
                <h2 class="retro-font-8bit">📈 Reports & Analytics</h2>
                <div class="section-divider"></div>
            </div>
            <div class="admin-buttons">
                <a href="@Url.Action("SystemLogs", "Admin")" class="admin-card">
                    <div class="card-icon">📋</div>
                    <div class="card-content">
                        <h3 class="retro-font-8bit">System Logs</h3>
                        <p>Monitor system activities and error logs</p>
                    </div>
                    <div class="card-arrow">→</div>
                </a>
            </div>
        </div>
    </div>

    <div class="famicom-cartridge-slot"></div>
</div>

<style>
    .admin-dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        background: linear-gradient(135deg, #1a0b2e 0%, #2a1144 100%);
        min-height: 100vh;
        color: white;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
    }

    .dashboard-header h1 {
        color: #ffcc33;
        font-size: 3rem;
        margin-bottom: 1rem;
        text-shadow: 0 0 20px rgba(255, 204, 51, 0.5);
    }

    .power-indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: #4caf50;
    }

    .power-light {
        width: 12px;
        height: 12px;
        background: #4caf50;
        border-radius: 50%;
        animation: pulse 2s infinite;
        box-shadow: 0 0 10px #4caf50;
    }

    .famicom-controller-ports {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 2rem 0;
    }

    .famicom-controller-ports span {
        width: 60px;
        height: 20px;
        background: #333;
        border: 2px solid #e6007e;
        border-radius: 10px;
    }

    .dashboard-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: linear-gradient(135deg, #2a1144 0%, #3a1f5d 100%);
        border: 2px solid #e6007e;
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(230, 0, 126, 0.3);
        border-color: #ffcc33;
    }

    .stat-icon {
        font-size: 3rem;
        opacity: 0.8;
    }

    .stat-info h3 {
        color: #e6007e;
        margin: 0 0 0.5rem 0;
        font-size: 1rem;
    }

    .stat-number {
        color: #ffcc33;
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
        font-family: 'Press Start 2P', cursive;
    }

    .admin-menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(600px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .admin-section {
        background: rgba(0, 0, 0, 0.2);
        border: 2px solid #666;
        border-radius: 8px;
        padding: 2rem;
    }

    .section-header {
        margin-bottom: 1.5rem;
    }

    .section-header h2 {
        color: #ffcc33;
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
    }

    .section-divider {
        height: 2px;
        background: linear-gradient(90deg, #e6007e, transparent);
        border-radius: 1px;
    }

    .admin-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .admin-card {
        background: linear-gradient(135deg, #2a1144 0%, #3a1f5d 100%);
        border: 2px solid #666;
        border-radius: 6px;
        padding: 1.5rem;
        text-decoration: none;
        color: white;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

    .admin-card:hover {
        border-color: #e6007e;
        transform: translateX(10px);
        box-shadow: 0 5px 20px rgba(230, 0, 126, 0.2);
        color: white;
        text-decoration: none;
    }

    .admin-card:before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: #e6007e;
        transform: scaleY(0);
        transition: transform 0.3s;
    }

    .admin-card:hover:before {
        transform: scaleY(1);
    }

    .card-icon {
        font-size: 2.5rem;
        opacity: 0.8;
        min-width: 60px;
        text-align: center;
    }

    .card-content {
        flex: 1;
    }

    .card-content h3 {
        color: #e6007e;
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
    }

    .card-content p {
        color: #ccc;
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .card-arrow {
        font-size: 1.5rem;
        color: #666;
        transition: all 0.3s;
    }

    .admin-card:hover .card-arrow {
        color: #ffcc33;
        transform: translateX(5px);
    }

    .quick-actions {
        background: rgba(0, 0, 0, 0.3);
        border: 2px solid #e6007e;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .quick-actions h3 {
        color: #ffcc33;
        margin: 0 0 1.5rem 0;
        text-align: center;
    }

    .quick-action-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .quick-btn {
        background: linear-gradient(135deg, #2a1144 0%, #3a1f5d 100%);
        border: 2px solid #666;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        font-family: 'VT323', monospace;
        font-size: 1.1rem;
    }

    .quick-btn:hover {
        border-color: #e6007e;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(230, 0, 126, 0.3);
        color: white;
        text-decoration: none;
    }

    .quick-btn.priority {
        border-color: #ffcc33;
        color: #ffcc33;
    }

    .quick-btn.priority:hover {
        background: linear-gradient(135deg, #ffcc33 0%, #ffd700 100%);
        color: #2a1144;
        border-color: #ffcc33;
    }

    .btn-icon {
        font-size: 1.2rem;
    }

    .famicom-cartridge-slot {
        height: 8px;
        background: #333;
        border: 2px solid #e6007e;
        border-radius: 4px;
        margin: 2rem auto 0;
        max-width: 200px;
    }

    /* Responsive Design */
   
</style>

