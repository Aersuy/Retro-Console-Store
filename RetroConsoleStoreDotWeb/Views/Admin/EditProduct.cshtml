        border: 2px solid #e6007e;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        font-family: 'VT323', monospace;
        font-size: 1.1rem;
    }

