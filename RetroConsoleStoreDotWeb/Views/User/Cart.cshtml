@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Shopping Cart";
}
@model List<RetroConsoleStoreDotWeb.ViewModel.CartItemsViewModel>
<div class="catalogue-container">
    <div class="catalogue-content">
        <h2 class="retro-font-pixel">Shopping Cart</h2>

        <div class="famicom-controller-ports">
            <span></span>
            <span></span>
        </div>

      
        {
            <div class="cart-items">
                @foreach (var item in Model)
                {
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="@item.ImagePath" alt="@item.Name" class="product-image">
                        </div>

                        <div class="item-details">
                            <h3 class="item-name">@item.Name</h3>
                            <p class="item-category">@item.Brand</p>
                            <div class="item-price">$@item.Price.ToString("F2")</div>
                        </div>

                        <div class="item-quantity">
                            <div class="quantity-controls">
                                <button class="quantity-btn decrease" data-item-id="@item.ProductId">-</button>
                                <input type="number" class="quantity-input" value="@item.Quantity" min="1" max="@item.StockQuantity" data-item-id="@item.ProductId">
                                <button class="quantity-btn increase" data-item-id="@item.ProductId">+</button>
                            </div>
                            <div class="stock-info">
                                @if (item.Quantity >= item.StockQuantity)
                                {
                                    <span class="low-stock">Only @item.StockQuantity left in stock!</span>
                                }
                            </div>
                        </div>

                        <div class="item-total">
                            <span class="total-label">Total:</span>
                            <span class="total-amount">$@((item.Price * item.Quantity).ToString("F2"))</span>
                        </div>

                        <div class="item-actions">
                            <button class="remove-btn" data-item-id="@item.ProductId">Remove</button>
                        </div>
                    </div>
                }
            </div>

            <div class="cart-summary">
         

                <div class="cart-actions">
                    <a href="@Url.Action("Index", "Item")" class="continue-shopping retro-font-8bit">Continue Shopping</a>
                    <a href="@Url.Action("Checkout", "Order")" class="checkout-button retro-font-8bit">Proceed to Checkout</a>
                </div>
            </div>
        }
        else
        {
            <div class="empty-cart">
                <div class="empty-cart-icon">🕹️</div>
                <h3 class="retro-font-8bit">Your cart is empty</h3>
                <p class="empty-cart-message">Looks like you haven't added any items to your cart yet!</p>
                <a href="@Url.Action("Index", "Item")" class="start-shopping retro-font-8bit">Start Shopping</a>
            </div>
        }

        <div class="famicom-cartridge-slot"></div>
    </div>
</div>

<style>
    /* Additional styles specific to the cart page */
    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin: 20px 0;
    }

    .cart-item {
        display: grid;
        grid-template-columns: 120px 2fr 1fr 1fr auto;
        gap: 20px;
        align-items: center;
        background-color: #2a1144;
        border: 3px solid #e6007e;
        padding: 20px;
        border-radius: 5px;
    }

    .item-image {
        width: 100px;
        height: 100px;
        overflow: hidden;
        border: 2px solid #e6007e;
        border-radius: 3px;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .item-details {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .item-name {
        color: #ffcc33;
        font-family: 'Silkscreen', cursive;
        font-size: 1.2rem;
        margin: 0;
    }

    .item-category {
        color: #ffffff;
        font-family: 'VT323', monospace;
        font-size: 1rem;
        margin: 0;
    }

    .item-price {
        color: #ffcc33;
        font-family: 'VT323', monospace;
        font-size: 1.1rem;
    }

    .item-quantity {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .quantity-btn {
        background-color: #2a1144;
        color: #ffcc33;
        border: 2px solid #e6007e;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-family: 'Press Start 2P', cursive;
        font-size: 0.8rem;
        transition: all 0.3s;
    }

        .quantity-btn:hover {
            background-color: #e6007e;
            color: #ffffff;
        }

    .quantity-input {
        width: 50px;
        height: 30px;
        text-align: center;
        background-color: #2a1144;
        color: #ffffff;
        border: 2px solid #e6007e;
        font-family: 'VT323', monospace;
        font-size: 1rem;
    }

    .stock-info {
        font-family: 'VT323', monospace;
        font-size: 0.8rem;
    }

    .low-stock {
        color: #f44336;
    }

    .item-total {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .total-label {
        color: #ffcc33;
        font-family: 'VT323', monospace;
        font-size: 0.9rem;
    }

    .total-amount {
        color: #ffffff;
        font-family: 'VT323', monospace;
        font-size: 1.2rem;
    }

    .item-actions {
        display: flex;
        justify-content: flex-end;
    }

    .remove-btn {
        background-color: #2a1144;
        color: #f44336;
        border: 2px solid #f44336;
        padding: 5px 10px;
        font-family: 'Press Start 2P', cursive;
        font-size: 0.7rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .remove-btn:hover {
            background-color: #f44336;
            color: #ffffff;
        }

    .cart-summary {
        background-color: #2a1144;
        border: 3px solid #e6007e;
        padding: 20px;
        border-radius: 5px;
        margin-top: 30px;
    }

    .summary-details {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        font-family: 'VT323', monospace;
        font-size: 1.1rem;
    }

    .summary-label {
        color: #ffcc33;
    }

    .summary-value {
        color: #ffffff;
    }

    .summary-row.total {
        font-size: 1.3rem;
        margin-top: 10px;
        padding-top: 10px;
        border-top: 2px solid #e6007e;
    }

    .cart-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .continue-shopping {
        background-color: #2a1144;
        color: #2196f3;
        border: 3px solid #2196f3;
        padding: 12px 25px;
        text-decoration: none;
        transition: all 0.3s;
    }

    .checkout-button {
        background-color: #2a1144;
        color: #4caf50;
        border: 3px solid #4caf50;
        padding: 12px 25px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .continue-shopping:hover,
        .checkout-button:hover {
            background-color: #e6007e;
            color: #ffffff;
            transform: scale(1.05);
        }

    .empty-cart {
        text-align: center;
        padding: 40px 20px;
    }

    .empty-cart-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .empty-cart-message {
        color: #ffffff;
        font-family: 'VT323', monospace;
        font-size: 1.2rem;
        margin: 20px 0;
    }

    .start-shopping {
        background-color: #2a1144;
        color: #ffcc33;
        border: 3px solid #e6007e;
        padding: 12px 25px;
        text-decoration: none;
        transition: all 0.3s;
        display: inline-block;
    }

        .start-shopping:hover {
            background-color: #e6007e;
            color: #ffffff;
            transform: scale(1.05);
        }

    .item-image {
        margin: 0 auto;
    }

    .item-details {
        align-items: center;
    }

    .item-quantity {
        align-items: center;
    }

    .item-total {
        align-items: center;
    }

    .item-actions {
        justify-content: center;
    }

    .cart-actions {
        flex-direction: column;
        gap: 10px;
    }
    }
</style>