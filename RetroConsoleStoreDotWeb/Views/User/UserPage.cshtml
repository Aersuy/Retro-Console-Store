@model RetroConsoleStoreDotDomain.Model.User.UserSmall
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Profile | RetroConsoleStore";
}
<div class="catalogue-container retro-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-5">
                <h1 class="retro-font-pixel">User Profile</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 mb-4">
                <div class="retro-card h-100" style="background-color: #3a1f5d; border: 4px solid #e6007e; color: #fff;">
                    <div class="card-body d-flex flex-column align-items-center">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                            <div class="product-image-container mb-3" style="background: #1a0b2e; width: 100%; height: 220px; display: flex; align-items: center; justify-content: center; border-radius: 12px 12px 0 0; overflow: hidden;">
                                <img src="@Url.Content(Model.ImagePath)" alt="Profile Picture" style="width: 100%; height: 100%; object-fit: cover; object-position: center; display: block; border-radius: 12px 12px 0 0; border: 3px solid #ffcc33;" />
                            </div>
                                }
                                else
                                {
                            <div class="product-image-container mb-3" style="background: #1a0b2e; width: 100%; height: 220px; display: flex; align-items: center; justify-content: center; border-radius: 12px 12px 0 0; overflow: hidden; border: 3px solid #ffcc33;">
                                        <i class="fa fa-user" style="font-size:60px; color:#e6007e;"></i>
                                    </div>
                                }
                        <h5 class="card-title retro-font-8bit mb-3">@Model.Name</h5>
                        <div class="card-text w-100 mb-2 text-center">
                                <span class="retro-font-8bit" style="color:#ffcc33;">Email:</span>
                            <span class="retro-font-8bit">@Model.Email</span>
                            </div>
                        <div class="card-text w-100 mb-2 text-center">
                                <span class="retro-font-8bit" style="color:#ffcc33;">Last Login:</span>
                            <span class="retro-font-8bit">@Model.LastLogin.ToString("MM/dd/yyyy HH:mm")</span>
                            </div>
                        <div class="card-text w-100 mb-3 text-center">
                                <span class="retro-font-8bit" style="color:#ffcc33;">Role:</span>
                            <span class="retro-font-8bit">@Model.Role</span>
                        </div>
                        <a href="@Url.Action("Cart", "User")" class="btn retro-btn mt-2 w-100"><i class="fa fa-shopping-cart"></i> View Cart</a>
                        <a href="@Url.Action("UpdateUser", "User", new { id = Model.Id })" class="btn retro-btn mt-2 w-100"><i class="fa fa-edit"></i> Update Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.retro-btn {
    background-color: #e6007e;
    color: #fff;
    border: none;
    padding: 10px 22px;
    border-radius: 4px;
    font-family: 'Silkscreen', cursive;
    text-transform: uppercase;
    font-size: 1rem;
    margin-bottom: 8px;
    transition: all 0.3s;
    display: inline-block;
}
.retro-btn:hover {
    background-color: #ffcc33;
    color: #2a1144;
    text-decoration: none;
    transform: translateY(-2px) scale(1.04);
}
.retro-font-8bit {
    font-family: 'Press Start 2P', cursive;
    font-size: 1.1rem;
    letter-spacing: 1px;
}
</style>