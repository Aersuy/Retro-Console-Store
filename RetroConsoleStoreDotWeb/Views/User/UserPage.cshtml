@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Profile | RetroConsoleStore";
}
@model RetroConsoleStoreDotDomain.Model.User.UserSmall

<div class="catalogue-container retro-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-5">
                <h1 class="retro-font-pixel text-light">User Profile</h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card retro-card">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            @using (Html.BeginForm("UserPage", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <label for="imageFile" class="profile-image-container">
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {

                                        <img src="@Url.Content(Model.ImagePath)" class="rounded-circle profile-image mb-3" alt="Profile Picture">
                                    }
                                    else
                                    {
                                        <div class="default-profile-image mb-3">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                    <div class="image-overlay">
                                        <i class="fas fa-camera"></i>
                                        <span>Change Photo</span>
                                    </div>
                                </label>
                                <input type="file" name="imageFile" id="imageFile" accept="image/*" style="display: none;" onchange="this.form.submit()" />
                            }
                            <h2 class="retro-font-8bit text-light">@Model.Name</h2>
                        </div>

                        <div class="user-info">
                            <div class="info-group">
                                <label class="retro-font-8bit text-warning">Email:</label>
                                <p class="text-light">@Model.Email</p>
                            </div>

                            <div class="info-group">
                                <label class="retro-font-8bit text-warning">Last Login:</label>
                                <p class="text-light">@Model.LastLogin.ToString("MM/dd/yyyy HH:mm")</p>
                            </div>

                            <div class="info-group">
                                <label class="retro-font-8bit text-warning">Role:</label>
                                <p class="text-light">@Model.Role</p>
                            </div>

                            <div class="info-group">
                                <label class="retro-font-8bit text-warning">Cart ID:</label>
                                <p class="text-light">@Model.CartId</p>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("Cart", "User")" class="btn retro-btn me-2">View Cart</a>
                            <a href="@Url.Action("Statistics", "User")" class="btn retro-btn">View Statistics</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .retro-section {
        background-color: #1a1a1a;
        padding: 2rem 0;
        color: #ffffff;
    }

    .profile-image-container {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 4px solid #800080;
    }

    .default-profile-image {
        width: 150px;
        height: 150px;
        background-color: #2a2a2a;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 4px solid #800080;
        margin: 0 auto;
    }

        .default-profile-image i {
            font-size: 64px;
            color: #800080;
        }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(128, 0, 128, 0.7);
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        color: white;
    }

    .profile-image-container:hover .image-overlay {
        opacity: 1;
    }

    .image-overlay i {
        font-size: 24px;
        margin-bottom: 5px;
    }

    .image-overlay span {
        font-size: 14px;
        font-family: 'Press Start 2P', cursive;
    }

    .user-info {
        background-color: #2a2a2a;
        padding: 1.5rem;
        border-radius: 8px;
        margin-top: 1.5rem;
        color: #ffffff;
    }

    .info-group {
        margin-bottom: 1rem;
        border-bottom: 2px solid #444;
        padding-bottom: 0.5rem;
    }

        .info-group:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .info-group label {
            color: #800080;
            margin-bottom: 0.25rem;
            display: block;
        }

        .info-group p {
            color: #ffffff;
            margin-bottom: 0;
        }

    .retro-btn {
        background-color: #800080;
        color: #ffffff;
        border: none;
        padding: 0.5rem 1.5rem;
        font-family: 'Press Start 2P', cursive;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .retro-btn:hover {
            background-color: #9370DB;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(128, 0, 128, 0.3);
        }

    .retro-card {
        background-color: #1a1a1a;
        border: 2px solid #800080;
        border-radius: 8px;
    }

    .card-body {
        color: #ffffff;
    }

    .text-light {
        color: #ffffff !important;
    }

    .text-warning {
        color: #800080 !important;
    }
</style>