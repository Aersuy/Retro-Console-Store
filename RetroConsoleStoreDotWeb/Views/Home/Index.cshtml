@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home | RetroConsoleStore";
}

<div class="catalogue-container home-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-5">
                <h1 class="retro-font-pixel">Retro Console Store</h1>
                <p class="home-subtitle">Choose your gaming era</p>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <a href="@Url.Action("Catalogue", "Home")" class="console-link">
                    <div class="console-box">
                        <div class="console-image-container">
                            <img src="/Content/images/nintendo-famicom.jpg" alt="Nintendo Famicom" class="console-image" onerror="this.src='/Content/images/product-1.png'" />
                        </div>
                        <h3 class="console-name">Nintendo</h3>
                    </div>
                </a>
            </div>
            
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <a href="@Url.Action("Catalogue", "Home")" class="console-link">
                    <div class="console-box">
                        <div class="console-image-container">
                            <img src="/Content/images/playstation-1.jpg" alt="PlayStation 1" class="console-image" onerror="this.src='/Content/images/product-2.png'" />
                        </div>
                        <h3 class="console-name">PlayStation</h3>
                    </div>
                </a>
            </div>
            
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <a href="@Url.Action("Catalogue", "Home")" class="console-link">
                    <div class="console-box">
                        <div class="console-image-container">
                            <img src="/Content/images/sega-genesis.jpg" alt="Sega Genesis" class="console-image" onerror="this.src='/Content/images/product-3.png'" />
                        </div>
                        <h3 class="console-name">Sega</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
