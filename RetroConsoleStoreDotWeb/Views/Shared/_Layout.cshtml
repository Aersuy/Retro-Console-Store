@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RetroConsoleStore</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=VT323&family=Silkscreen&family=Press+Start+2P&display=swap" rel="stylesheet">
    @Styles.Render("~/bundles/site/css")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/font-awesome/css")
    @Styles.Render("~/bundles/main/css")
    @Styles.Render("~/bundles/tiny-slider/css")

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
</head>
<body>
    <!--Header/Navigation-->
    <nav class="retro-navbar navbar navbar-expand-md" arial-label="RetroConsoleStore navigation">
        @Html.Partial("_Header")
    </nav>

    @RenderBody()

    <!--Footer-->
    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/bootstrap-bundle/js")
    @Scripts.Render("~/bundles/tiny-slider/js")
    @Scripts.Render("~/bundles/main/js")

    @RenderSection("scripts", required: false)
</body>
</html>
