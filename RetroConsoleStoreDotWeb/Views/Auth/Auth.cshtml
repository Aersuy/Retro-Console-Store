@model RetroConsoleStoreDotWeb.Models.Auth.Auth

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="contact-container">
    <h2 class="retro-font-pixel">Create Account</h2>

    <div class="famicom-controller-ports">
        <span></span>
        <span></span>
    </div>

    @using (Html.BeginForm("Auth", "Auth", FormMethod.Post))
    {
        <div>
            <label for="UserName">Username</label>
            @Html.TextBoxFor(m => m.Name, new
            {
                required = "required",
                placeholder = "Enter your username",
                minlength = "5"
            })
        </div>

        <div>
            <label for="Email">Email</label>
            @Html.TextBoxFor(m => m.Email, new
            {
                placeholder = "Enter your email"

            })

        </div>

        <div>
            <label for="Password">Password</label>
            @Html.PasswordFor(m => m.Password, new
            {
                required = "required",
                placeholder = "Enter your password",
                minlength = "8",
                @class = "form-input" // Add this class
            })
        </div>

        <div>
            <label for="ConfirmPassword">Confirm Password</label>
            @Html.Password("ConfirmPassword", null, new
            {
                required = "required",
                placeholder = "Confirm your password",
                @class = "form-input" // Add this class
            })
        </div>

        <div class="button-container">
            <button type="submit" class="retro-font-8bit">Register</button>
        </div>
    }

    <div class="famicom-cartridge-slot"></div>

    <p class="retro-font-8bit" style="margin-top: 20px;">
        Already have an account? <a href="@Url.Action("Login", "Auth")" style="color: #ffcc33;">Login here</a>
    </p>

    @if (ViewBag.Message != null)
    {
        <div class="message-box retro-font-8bit">
            @ViewBag.Message
        </div>
    }
</div>
